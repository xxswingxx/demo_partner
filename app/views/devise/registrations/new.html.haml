%h2 Sign up

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  = f.input :email, autofocus: true, as: :email, wrapper: :horizontal_form
  = f.input :first_name, autofocus: true, wrapper: :horizontal_form
  = f.input :last_name, autofocus: true, wrapper: :horizontal_form
  = f.input :street_line_2, autofocus: true, wrapper: :horizontal_form
  = f.input :street_line_2, autofocus: true, wrapper: :horizontal_form
  = f.input :city, autofocus: true, wrapper: :horizontal_form
  = f.input :region, autofocus: true, wrapper: :horizontal_form
  = f.input :country, autofocus: true, as: :country, wrapper: :horizontal_form
  = f.input :phone_2, autofocus: true, wrapper: :horizontal_form
  = f.input :street_line_2, autofocus: true, wrapper: :horizontal_form
  = f.input :web, autofocus: true, wrapper: :horizontal_form
  = f.input :tax_id, autofocus: true, wrapper: :horizontal_form
  = f.input :vat_number, autofocus: true, wrapper: :horizontal_form
  = f.input :password, autocomplete: "off", as: :password, wrapper: :horizontal_form
  = f.input :password_confirmation, autocomplete: "off", as: :password, wrapper: :horizontal_form
  .actions.row
    .small-12.columns= f.submit "Sign up"
