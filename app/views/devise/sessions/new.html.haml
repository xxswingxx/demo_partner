%h2 Log in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-inputs
    = f.input :email, required: false, autofocus: true, wrapper: :horizontal_form
    = f.input :password, required: false,  wrapper: :horizontal_form
    = f.input :remember_me, as: :boolean, wrapper: :horizontal_form if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "Log in"

.row
  .small-12.small-centered.columns= render "devise/shared/links"